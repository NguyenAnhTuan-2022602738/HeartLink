<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base Style for Admin Cards -->
    <style name="AdminCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AdminCard.Content" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AdminCard.Title" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdminCard.Value" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdminCard.Subtitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdminCard.Subtitle.Green">
        <item name="android:textColor">@color/admin_text_green</item>
    </style>

    <style name="AdminCard.Icon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AdminCard.IconBackground" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdminCard.IconBackground.Blue">
        <item name="android:background">@drawable/circle_bg_blue</item>
    </style>

    <style name="AdminCard.IconBackground.Pink">
        <item name="android:background">@drawable/circle_bg_pink</item>
    </style>

    <style name="AdminCard.IconBackground.Purple">
        <item name="android:background">@drawable/circle_bg_purple</item>
    </style>

    <!-- Border Styles -->
    <style name="AdminCard.Border" parent="">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="AdminCard.Border.Blue">
        <item name="android:background">@color/admin_card_border_blue</item>
    </style>
    <style name="AdminCard.Border.Pink">
        <item name="android:background">@color/admin_card_border_pink</item>
    </style>
    <style name="AdminCard.Border.Purple">
        <item name="android:background">@color/admin_card_border_purple</item>
    </style>
    <style name="AdminCard.Border.Red">
        <item name="android:background">@color/admin_card_border_red</item>
    </style>

    <!-- Quick Stat Card Styles -->
    <style name="AdminQuickStatCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AdminQuickStatCard.Content" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

     <style name="AdminQuickStatCard.Icon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="AdminQuickStatCard.Title" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdminQuickStatCard.Value" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>