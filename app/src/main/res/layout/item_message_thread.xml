<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="82dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <FrameLayout
        android:id="@+id/thread_avatar_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_messages_active_ring"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/thread_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_avatar_circle"
            android:clipToOutline="true"
            android:contentDescription="@string/messages_thread_avatar_content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_person_3" />

        <View
            android:id="@+id/thread_avatar_online_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="6dp"
            android:background="@drawable/bg_active_user_online_dot"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/thread_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:text="@string/profile_name_fallback"
        android:textColor="@color/home_title"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/thread_timestamp"
        app:layout_constraintStart_toEndOf="@id/thread_avatar_container"
        app:layout_constraintTop_toTopOf="@id/thread_avatar_container"
        tools:text="Linh" />

    <TextView
        android:id="@+id/thread_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/messages_timestamp"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/thread_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="23ph trÆ°á»›c" />

    <TextView
        android:id="@+id/thread_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/messages_thread_preview"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/thread_unread_badge"
        app:layout_constraintStart_toStartOf="@id/thread_name"
        app:layout_constraintTop_toBottomOf="@id/thread_name"
        tools:text="Sticker ðŸ˜" />

    <TextView
        android:id="@+id/thread_unread_badge"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_messages_unread_badge"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/thread_last_message"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="@color/messages_list_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/thread_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
