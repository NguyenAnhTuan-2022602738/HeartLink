<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.PhotoUploadActivity">

    <TextView
        android:id="@+id/photo_skip_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/photo_back_button_container"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/photo_skip_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/photo_skip_button">

        <ImageView
            android:id="@+id/photo_back_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_desc_navigate_back"
            android:padding="16dp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/colorPrimary" />
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/photo_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:progress="96"
        android:progressDrawable="@drawable/progress_interest"
        app:layout_constraintBottom_toBottomOf="@id/photo_back_button_container"
        app:layout_constraintEnd_toStartOf="@id/photo_skip_button"
        app:layout_constraintStart_toEndOf="@id/photo_back_button_container"
        app:layout_constraintTop_toTopOf="@id/photo_back_button_container" />

    <vn.haui.heartlink.views.GradientTextView
        android:id="@+id/photo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/photo_upload_title"
        android:textSize="30sp"
        app:gradientEndColor="@color/interest_gradient_end"
        app:gradientStartColor="@color/interest_gradient_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_back_button_container" />

    <TextView
        android:id="@+id/photo_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/photo_upload_subtitle"
        android:textColor="@color/textColorSecondary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_grid_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/photo_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_subtitle">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/photo_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/photo_horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58" />

        <FrameLayout
            android:id="@+id/photo_slot_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toTopOf="@id/photo_horizontal_guideline"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/photo_vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/photo_image_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_0"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_slot_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/photo_slot_spacing"
            android:layout_marginBottom="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toTopOf="@id/photo_slot_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_vertical_guideline"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/photo_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_1"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_slot_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toTopOf="@id/photo_horizontal_guideline"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/photo_slot_1">

            <ImageView
                android:id="@+id/photo_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_2"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_slot_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/photo_slot_spacing"
            android:layout_marginEnd="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/photo_slot_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_horizontal_guideline">

            <ImageView
                android:id="@+id/photo_image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_3"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_slot_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/photo_slot_spacing"
            android:layout_marginEnd="@dimen/photo_slot_spacing"
            android:layout_marginStart="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/photo_slot_5"
            app:layout_constraintStart_toEndOf="@id/photo_slot_3"
            app:layout_constraintTop_toBottomOf="@id/photo_horizontal_guideline">

            <ImageView
                android:id="@+id/photo_image_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_4"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_slot_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/photo_slot_spacing"
            android:background="@drawable/bg_photo_slot_placeholder"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/photo_horizontal_guideline">

            <ImageView
                android:id="@+id/photo_image_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/photo_add_icon_5"
                android:layout_width="@dimen/photo_slot_icon_size"
                android:layout_height="@dimen/photo_slot_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_add" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <vn.haui.heartlink.views.WaveView
        android:id="@+id/photo_wave"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/photo_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_grid_container" />

    <Button
        android:id="@+id/photo_continue_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_button_gradient"
        android:enabled="false"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/continue_label"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
