<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.PhotoUploadActivity">

    <include
        android:id="@+id/header"
        layout="@layout/layout_onboarding_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <vn.haui.heartlink.ui.GradientTextView
        android:id="@+id/photo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Nhập ảnh của bạn"
        android:textSize="28sp"
        app:gradientEndColor="@color/colorAccent"
        app:gradientStartColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/photo_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Hãy cho chúng tôi những bức ảnh đẹp của bạn để tăng thiện cảm trong mắt đối phương nhé"
        android:textColor="@color/textColorSecondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintDimensionRatio="1:1.2"
        app:layout_constraintTop_toBottomOf="@+id/photo_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main Photo -->
        <FrameLayout
            android:id="@+id/photo_container_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintHeight_percent="0.65">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

        <!-- Other Photos -->
        <FrameLayout
            android:id="@+id/photo_container_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_container_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/photo_container_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintBottom_toTopOf="@id/photo_container_5">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_container_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_container_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_container_3"
            app:layout_constraintEnd_toStartOf="@id/photo_container_5"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo_container_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_photo_button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add_photo"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/wavy_line_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_dashed_line"
        app:layout_constraintBottom_toTopOf="@id/continue_button_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continue_button_photo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded_red"
        android:fontFamily="@font/montserrat_bold"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
