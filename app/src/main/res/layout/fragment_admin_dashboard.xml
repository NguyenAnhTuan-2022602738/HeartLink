<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".admin.AdminDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Stats List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Total Users -->
            <com.google.android.material.card.MaterialCardView style="@style/AdminCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        style="@style/AdminCard.Border.Blue"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout style="@style/AdminCard.Content">
                        <TextView android:id="@+id/card_title_1" style="@style/AdminCard.Title" android:text="Tổng người dùng" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_total_users" style="@style/AdminCard.Value" tools:text="8" app:layout_constraintTop_toBottomOf="@id/card_title_1" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_new_users" style="@style/AdminCard.Subtitle.Green" tools:text="+0 người mới" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <FrameLayout
                            style="@style/AdminCard.IconBackground.Blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView style="@style/AdminCard.Icon" android:src="@drawable/ic_admin_users" android:layout_gravity="center"/>
                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Total Matches -->
            <com.google.android.material.card.MaterialCardView style="@style/AdminCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        style="@style/AdminCard.Border.Pink"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout style="@style/AdminCard.Content">
                        <TextView android:id="@+id/card_title_2" style="@style/AdminCard.Title" android:text="Tổng Match" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_total_matches" style="@style/AdminCard.Value" tools:text="120" app:layout_constraintTop_toBottomOf="@id/card_title_2" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_matches_per_user" style="@style/AdminCard.Subtitle" tools:text="15.0 / người" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <FrameLayout
                            style="@style/AdminCard.IconBackground.Pink"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView style="@style/AdminCard.Icon" android:src="@drawable/ic_admin_heart" android:layout_gravity="center"/>
                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Messages -->
            <com.google.android.material.card.MaterialCardView style="@style/AdminCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        style="@style/AdminCard.Border.Purple"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout style="@style/AdminCard.Content">
                        <TextView android:id="@+id/card_title_3" style="@style/AdminCard.Title" android:text="Tin nhắn" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_total_messages" style="@style/AdminCard.Value" tools:text="412" app:layout_constraintTop_toBottomOf="@id/card_title_3" app:layout_constraintStart_toStartOf="parent"/>
                        <TextView android:id="@+id/text_messages_per_user" style="@style/AdminCard.Subtitle" tools:text="52 / người" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                        <FrameLayout
                            style="@style/AdminCard.IconBackground.Purple"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView style="@style/AdminCard.Icon" android:src="@drawable/ic_admin_message" android:layout_gravity="center"/>
                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Middle Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView style="@style/AdminQuickStatCard" app:cardBackgroundColor="@color/admin_stat_green">
                <LinearLayout style="@style/AdminQuickStatCard.Content">
                    <ImageView style="@style/AdminQuickStatCard.Icon" android:src="@drawable/ic_person"/>
                    <TextView style="@style/AdminQuickStatCard.Title" android:text="Đang hoạt động"/>
                    <TextView android:id="@+id/text_active_users" style="@style/AdminQuickStatCard.Value" tools:text="7"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView style="@style/AdminQuickStatCard" app:cardBackgroundColor="@color/admin_stat_blue">
                <LinearLayout style="@style/AdminQuickStatCard.Content">
                    <ImageView style="@style/AdminQuickStatCard.Icon" android:src="@drawable/ic_analytics"/>
                    <TextView style="@style/AdminQuickStatCard.Title" android:text="Online hiện tại"/>
                    <TextView android:id="@+id/text_online_users" style="@style/AdminQuickStatCard.Value" tools:text="5"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView style="@style/AdminQuickStatCard" app:cardBackgroundColor="@color/admin_stat_red">
                <LinearLayout style="@style/AdminQuickStatCard.Content">
                    <ImageView style="@style/AdminQuickStatCard.Icon" android:src="@drawable/ic_admin_shield"/>
                    <TextView style="@style/AdminQuickStatCard.Title" android:text="Bị khóa"/>
                    <TextView android:id="@+id/text_blocked_users" style="@style/AdminQuickStatCard.Value" tools:text="+0%"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- User Growth Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_admin_trending_up"
                        app:tint="@color/admin_card_border_blue"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tăng trưởng người dùng"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_user_growth"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- User Distribution Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_manage_accounts"
                        app:tint="@color/admin_stat_green"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phân bổ người dùng"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_user_distribution"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Weekly Activity Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_analytics"
                        app:tint="@color/admin_card_border_purple"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoạt động trong tuần"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_weekly_activity"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
