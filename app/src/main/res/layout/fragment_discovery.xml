<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">

    <LinearLayout
        android:id="@+id/home_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/home_back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_home_icon_button"
            android:contentDescription="@string/home_back_content_description"
            android:padding="12dp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/home_nav_active"
            android:visibility="invisible"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_title"
                android:textColor="@color/home_title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_home_location"
                android:drawableTint="@color/home_subtitle"
                android:text="@string/home_location"
                android:textColor="@color/home_subtitle"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/home_filter_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_home_icon_button"
            android:contentDescription="@string/home_filter_content_description"
            android:padding="12dp"
            android:src="@drawable/ic_home_filter" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_card_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_top_bar"
        app:layout_constraintBottom_toTopOf="@+id/home_actions_container"
        app:layout_constraintVertical_bias="0.0"
        android:clipToPadding="false"
        android:clipChildren="false">

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/home_card_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/home_loading_indicator"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />



        <TextView
            android:id="@+id/home_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/home_empty_state"
            android:textColor="@color/home_subtitle"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/home_dislike_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/bg_home_action_secondary"
            android:elevation="4dp"
            android:padding="18dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/home_button_dislike"
                android:src="@drawable/ic_home_dislike"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_like_button"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_home_action_primary"
            android:elevation="8dp"
            android:padding="22dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/home_button_like"
                android:src="@drawable/ic_home_like"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_superlike_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/bg_home_action_secondary"
            android:elevation="4dp"
            android:padding="18dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/home_button_superlike"
                android:src="@drawable/ic_home_superlike"
                android:scaleType="fitCenter" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>