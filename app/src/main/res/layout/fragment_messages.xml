<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messages_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.MessagesFragment">

    <TextView
        android:id="@+id/messages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/messages_title"
        android:textColor="@color/home_title"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/messages_filter_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_messages_filter_button"
        android:contentDescription="@string/messages_filter_content_description"
        android:padding="12dp"
        android:src="@drawable/ic_home_filter"
        app:tint="@color/match_action_primary"
        app:layout_constraintBottom_toBottomOf="@id/messages_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/messages_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/messages_search_container"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_messages_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/messages_search_content_description"
                android:src="@drawable/ic_search"
                app:tint="@color/home_subtitle"
                tools:ignore="VectorPath" />

            <EditText
                android:id="@+id/messages_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/messages_search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/home_title"
                android:textColorHint="@color/home_subtitle"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/messages_active_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/messages_active_label"
        android:textColor="@color/home_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_search_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_active_list"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_active_label"
        tools:listitem="@layout/item_active_user" />

    <TextView
        android:id="@+id/messages_threads_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/messages_threads_label"
        android:textColor="@color/home_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_active_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_threads_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_threads_label"
        tools:listitem="@layout/item_message_thread" />

    <ProgressBar
        android:id="@+id/messages_loading"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/messages_threads_list"
        app:layout_constraintBottom_toBottomOf="@+id/messages_threads_list"
        app:layout_constraintEnd_toEndOf="@+id/messages_threads_list"
        app:layout_constraintStart_toStartOf="@+id/messages_threads_list" />

    <TextView
        android:id="@+id/messages_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center"
        android:text="@string/messages_empty_state"
        android:textAlignment="center"
        android:textColor="@color/home_subtitle"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/messages_threads_list"
        app:layout_constraintBottom_toBottomOf="@+id/messages_threads_list"
        app:layout_constraintEnd_toEndOf="@+id/messages_threads_list"
        app:layout_constraintStart_toStartOf="@+id/messages_threads_list" />

</androidx.constraintlayout.widget.ConstraintLayout>