<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.OtpVerificationActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/otp_box_inactive"
        android:padding="12dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="100dp"
        android:max="60" 
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        tools:progress="18" />

    <!-- Countdown -->

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/textColorPrimary"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        tools:text="00:42" />

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Hãy nhập mã xác thực
mà chúng tôi gửi bạn"
        android:textColor="@color/textColorSecondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_text" />

    <!-- OTP Boxes -->
    <LinearLayout
        android:id="@+id/otp_boxes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_text">

        <EditText android:id="@+id/otp_box_1" style="@style/OtpEditTextBase" />
        <EditText android:id="@+id/otp_box_2" style="@style/OtpEditTextBase" />

        <EditText
            android:id="@+id/otp_box_3"
            style="@style/OtpEditTextBase" />

        <EditText android:id="@+id/otp_box_4" style="@style/OtpEditTextBase" />

    </LinearLayout>

    <!-- Bottom Section -->


    <!-- Numpad -->
    <TextView
        android:id="@+id/resend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Gửi lại"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/resend_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_boxes_layout"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="1"
            android:text="1" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="2"
            android:text="2" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="3"
            android:text="3" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="4"
            android:text="4" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="5"
            android:text="5" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="6"
            android:text="6" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="7"
            android:text="7" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="8"
            android:text="8" />

        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="9"
            android:text="9" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp" /> <!-- Spacer for alignment -->
        <TextView
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:tag="0"
            android:text="0" />

        <ImageView
            android:id="@+id/numpad_action_button"
            style="@style/NumpadButton"
            android:onClick="onNumpadClicked"
            android:src="@drawable/ic_backspace"
            android:tag="backspace" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>