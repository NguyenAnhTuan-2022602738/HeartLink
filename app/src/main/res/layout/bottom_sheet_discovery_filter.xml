<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/filter_handle"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/dialog_handle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/filter_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/home_title" />

        <TextView
            android:id="@+id/filter_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/filter_action_clear"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/filter_interested_in"
        android:textColor="@color/home_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/filter_interested_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/filter_interested_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_gender_button_background"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/filter_interest_female"
            android:textColor="@color/selector_gender_button_text" />

        <RadioButton
            android:id="@+id/filter_interested_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gender_button_background"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/filter_interest_male"
            android:textColor="@color/selector_gender_button_text" />

        <RadioButton
            android:id="@+id/filter_interested_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_gender_button_background"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/filter_interest_both"
            android:textColor="@color/selector_gender_button_text" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/filter_location_label"
        android:textColor="@color/home_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/filter_location_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_filter_location_field"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="Bắc Từ Liêm, Hà Nội"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_distance"
            android:textColor="@color/home_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filter_distance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40km"
            android:textColor="@color/home_subtitle" />
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/filter_distance_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:value="40"
        android:valueFrom="5"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:thumbColor="@color/colorPrimary"
        app:trackColorActive="@color/colorPrimary"
        app:trackColorInactive="#E8E6EA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_age"
            android:textColor="@color/home_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filter_age_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-35"
            android:textColor="@color/home_subtitle" />
    </LinearLayout>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/filter_age_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:valueFrom="18"
        android:valueTo="80"
        app:labelBehavior="gone"
        app:thumbColor="@color/colorPrimary"
        app:trackColorActive="@color/colorPrimary"
        app:trackColorInactive="#E8E6EA"
        app:values="@array/initial_age_range" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_apply_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/action_apply"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="30dp" />

</LinearLayout>
