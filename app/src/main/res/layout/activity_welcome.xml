<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.WelcomeActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Nền tảng kết bạn và kết nối cảm xúc"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_logo" />


    <!-- Image Layout Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_layout_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tagline"
        app:layout_constraintBottom_toTopOf="@+id/create_account_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/dashed_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/welcome_dashed_line"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Person 1 (Top-Left) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/person_1_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp"
            app:layout_constraintCircle="@+id/dashed_line"
            app:layout_constraintCircleRadius="100dp"
            app:layout_constraintCircleAngle="295"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/welcome_person_1" />
        </androidx.cardview.widget.CardView>

        <!-- Person 2 (Right) with purple background -->
        <View
            android:id="@+id/person_2_bg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/avatar_background_purple"
            app:layout_constraintCircle="@+id/dashed_line"
            app:layout_constraintCircleRadius="110dp"
            app:layout_constraintCircleAngle="40"
            tools:ignore="MissingConstraints"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/person_2_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="@+id/person_2_bg"
            app:layout_constraintBottom_toBottomOf="@+id/person_2_bg"
            app:layout_constraintStart_toStartOf="@+id/person_2_bg"
            app:layout_constraintEnd_toEndOf="@+id/person_2_bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/welcome_person_2" />
        </androidx.cardview.widget.CardView>

        <!-- Person 3 (Bottom-Left) with yellow background -->
        <View
            android:id="@+id/person_3_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/avatar_background_yellow"
            app:layout_constraintCircle="@+id/dashed_line"
            app:layout_constraintCircleRadius="120dp"
            app:layout_constraintCircleAngle="205"
            tools:ignore="MissingConstraints"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/person_3_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="@+id/person_3_bg"
            app:layout_constraintBottom_toBottomOf="@+id/person_3_bg"
            app:layout_constraintStart_toStartOf="@+id/person_3_bg"
            app:layout_constraintEnd_toEndOf="@+id/person_3_bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/welcome_person_3" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Create Account Button -->
    <Button
        android:id="@+id/create_account_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Tạo tài khoản"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/login_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Login Text Layout -->
    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Bạn đã có tài khoản? "
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Đăng nhập"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>