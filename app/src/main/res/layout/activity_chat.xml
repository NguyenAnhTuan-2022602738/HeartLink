<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background"
    tools:context=".activities.ChatActivity">

    <View
        android:id="@+id/chat_header_backdrop"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_chat_header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/chat_back_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_chat_icon_circle"
        android:contentDescription="@string/content_desc_navigate_back"
        android:padding="10dp"
        android:src="@drawable/ic_back_arrow"
        android:tint="@color/home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/messages_title"
        android:textColor="@color/home_title"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_back_button" />

    <ImageButton
        android:id="@+id/chat_more_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_messages_filter_button"
        android:contentDescription="@string/chat_more_actions_content_description"
        android:padding="12dp"
        android:src="@drawable/ic_home_more_vertical"
        android:tint="@color/match_action_primary"
        app:layout_constraintBaseline_toBaselineOf="@id/chat_screen_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_screen_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingEnd="24dp"
            android:paddingBottom="20dp">

            <FrameLayout
                android:id="@+id/chat_avatar_container"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_messages_active_ring"
                android:padding="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/chat_partner_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="@string/chat_partner_avatar_content_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/welcome_person_2" />
            </FrameLayout>

            <TextView
                android:id="@+id/chat_partner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:text="Bạn bè"
                android:textColor="@color/home_title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/chat_avatar_container"
                app:layout_constraintTop_toTopOf="@id/chat_avatar_container" />

            <LinearLayout
                android:id="@+id/chat_partner_status_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/chat_avatar_container"
                app:layout_constraintTop_toBottomOf="@id/chat_partner_name">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_chat_status_dot" />

                <TextView
                    android:id="@+id/chat_partner_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/chat_partner_status_active"
                    android:textColor="@color/messages_thread_preview"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/chat_header_notch"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:layout_marginTop="-8dp"
        android:background="@drawable/bg_chat_header_notch"
        app:layout_constraintEnd_toEndOf="@id/chat_header_card"
        app:layout_constraintStart_toStartOf="@id/chat_header_card"
        app:layout_constraintTop_toTopOf="@id/chat_header_card" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_messages_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_header_card"
        tools:listitem="@layout/item_chat_message_outgoing" />

    <LinearLayout
        android:id="@+id/chat_input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_chat_input_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="18dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/chat_extra_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_chat_input_icon"
            android:contentDescription="@string/chat_extra_action_content_description"
            android:padding="8dp"
            android:src="@drawable/ic_chat_extra"
            android:tint="@color/messages_thread_preview" />

        <ImageButton
            android:id="@+id/chat_voice_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_chat_input_icon"
            android:contentDescription="@string/chat_voice_action_content_description"
            android:padding="8dp"
            android:src="@drawable/ic_chat_voice"
            android:tint="@color/match_action_primary" />

        <EditText
            android:id="@+id/chat_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/chat_input_hint"
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:textColor="@color/home_title"
            android:textColorHint="@color/messages_thread_preview"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/chat_send_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_match_action_primary"
            android:contentDescription="@string/chat_send_content_description"
            android:padding="10dp"
            android:src="@drawable/ic_chat_send"
            android:tint="@android:color/white" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/chat_loading"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
