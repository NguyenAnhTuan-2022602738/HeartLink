<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SeekingActivity">

    <include
        android:id="@+id/header"
        layout="@layout/layout_onboarding_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <vn.haui.heartlink.ui.GradientTextView
        android:id="@+id/seeking_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Bạn Đang Tìm Kiếm...."
        android:textSize="28sp"
        app:gradientEndColor="@color/colorAccent"
        app:gradientStartColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/seeking_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Hãy cung cấp cho chúng tôi mối quan hệ mà bạn muốn"
        android:textColor="@color/textColorSecondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeking_title" />

    <RadioGroup
        android:id="@+id/seeking_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeking_subtitle">

        <RadioButton
            android:id="@+id/radio_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seeking_option_background"
            android:button="@android:color/transparent" 
            android:drawableEnd="@drawable/seeking_radio_selector"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="24dp"
            android:paddingTop="18dp"
            android:paddingEnd="0dp"
            android:paddingBottom="18dp"
            android:text="Một mối quan hệ bạn bè"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/seeking_option_background"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/seeking_radio_selector"
            android:checked="true"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="24dp"
            android:paddingTop="18dp"
            android:paddingEnd="0dp"
            android:paddingBottom="18dp"
            android:text="Tìm người trò chuyện"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_no_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/seeking_option_background"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/seeking_radio_selector"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="24dp"
            android:paddingTop="18dp"
            android:paddingEnd="0dp"
            android:paddingBottom="18dp"
            android:text="Mối quan hệ không ràng buộc"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/seeking_option_background"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/seeking_radio_selector"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="24dp"
            android:paddingTop="18dp"
            android:paddingEnd="0dp"
            android:paddingBottom="18dp"
            android:text="Thiết lập sau"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/continue_button_seeking"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/button_rounded_red"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
