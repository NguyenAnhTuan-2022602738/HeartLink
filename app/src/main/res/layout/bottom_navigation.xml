<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp">

        <LinearLayout
            android:id="@+id/home_nav_discover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/home_nav_discover_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/home_nav_discover"
                android:src="@drawable/ic_home_nav_discover"
                app:tint="@color/bottom_nav_item_color" />

            <TextView
                android:id="@+id/home_nav_discover_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/home_nav_discover"
                android:textColor="@color/bottom_nav_item_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/home_nav_discover_indicator"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/bottom_nav_indicator"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_nav_matches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/home_nav_matches_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/home_nav_matches"
                android:src="@drawable/ic_home_nav_matches"
                app:tint="@color/bottom_nav_item_color" />

            <TextView
                android:id="@+id/home_nav_matches_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/home_nav_matches"
                android:textColor="@color/bottom_nav_item_color"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/home_nav_matches_indicator"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/bottom_nav_indicator"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_nav_messages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/home_nav_messages_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/home_nav_messages"
                android:src="@drawable/ic_home_nav_messages"
                app:tint="@color/bottom_nav_item_color" />

            <TextView
                android:id="@+id/home_nav_messages_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/home_nav_messages"
                android:textColor="@color/bottom_nav_item_color"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/home_nav_messages_indicator"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/bottom_nav_indicator"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/home_nav_profile_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/home_nav_profile"
                android:src="@drawable/ic_home_nav_profile"
                app:tint="@color/bottom_nav_item_color" />

            <TextView
                android:id="@+id/home_nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/home_nav_profile"
                android:textColor="@color/bottom_nav_item_color"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/home_nav_profile_indicator"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/bottom_nav_indicator"
                android:visibility="invisible" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>