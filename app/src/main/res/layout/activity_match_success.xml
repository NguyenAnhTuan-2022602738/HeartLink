<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_success_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Partner Avatar Image (left, rotated) -->



    <!-- Heart icon on Partner Avatar -->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/current_user_avatar_image"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:rotation="15"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/guideline_center"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        tools:src="@tools:sample/avatars" />

    <!-- Current User Avatar Image (right, rotated, overlapping) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/partner_avatar_image"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="8dp"
        android:rotation="-15"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/guideline_center"
        app:layout_constraintTop_toTopOf="@id/partner_avatar_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-60dp"
        android:background="@drawable/bg_avatar_circle"
        android:elevation="4dp"
        android:padding="12dp"
        android:src="@drawable/ic_heart_filled"
        app:layout_constraintEnd_toEndOf="@id/partner_avatar_image"
        app:layout_constraintTop_toTopOf="@id/partner_avatar_image" />

    <!-- Heart icon on Current User Avatar -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="-110dp"
        android:layout_marginStart="-150dp"
        android:background="@drawable/bg_avatar_circle"
        android:elevation="4dp"
        android:padding="12dp"
        android:src="@drawable/ic_heart_filled"
        app:layout_constraintBottom_toBottomOf="@id/current_user_avatar_image"
        app:layout_constraintStart_toStartOf="@id/current_user_avatar_image" />

    <TextView
        android:id="@+id/match_success_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:text="@string/match_success_title_placeholder"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partner_avatar_image" />

    <TextView
        android:id="@+id/match_success_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/match_success_subtitle"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_success_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wave_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/match_success_wave"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/continue_swiping_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_swiping_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/match_success_continue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/match_secondary_button_bg"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
