<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <application
        android:name=".HeartLinkApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HeartLink">
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.OtpVerificationActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ProfileInfoActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.GenderSelectionActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.SeekingActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.InterestsActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.PhotoUploadActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.LocationPermissionActivity"
            android:exported="false"/>

        <activity
            android:name=".activities.NotificationPermissionActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.MatchSuccessActivity"
            android:exported="false"
            android:theme="@style/Theme.HeartLink"/>
        <activity
            android:name=".activities.MatchesActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.MessagesActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ProfileDetailActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ProfileSettingsActivity"
            android:exported="false"/>
    </application>

</manifest>